---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import { getAllPosts, sortMDByDate } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: { desc: string; href: string; title: string }[] = [	
	{
		desc: "My Master's thesis: A secure end to end encryption for data distribution in a Kubernetes Cluster",
		href: "https://drive.google.com/file/d/1vCElVZT8VyVALQQ2Ze3IZbbDe6UZx1Oh/view?usp=sharing",
		title: "Amadeus",
	},
	{
		desc: "I built a plugin to streamline Pentaho, a report designing tool.",
		href: "https://indico.cern.ch/event/1311334/contributions/5534965/attachments/2698360/4683208/Openlab%20Summer%20Internship%20(1).pdf",
		title: "CERN",
	},
	{
		desc: "Research on ML defences for Mission Critical Communication",
		href: "https://www.sciencedirect.com/science/article/pii/S0167739X24004643",
		title: "VTT",
	},
	
	{
		desc: "I deployed a security service on a private cloud platform.",
		href: "https://drive.google.com/file/d/1YQrqhWDv6jLe0FMFYZneP53GQ6SmOETM/view?usp=sharing",
		title: "JP Morgan Chase",
	},
	
	{
		desc: "An algorithm to detect underwater mines using HoG and Canny Edge",
		href: "https://ieeexplore.ieee.org/abstract/document/9717404/",
		title: "Underwater Mine Detection",
	},
	{
		desc: "Analysis of algorithms to detect botnets in Android",
		href: "https://www.mdpi.com/2079-9292/10/4/519",
		title: "Deep Learning for Android Botnet Detection",
	},
	{
		desc: "Proposal of an attack matrix for tactical 6G networks",
		href: "https://www.sciencedirect.com/science/article/pii/S0167739X24004643",
		title: "Cybersecurity for tactical 6G networks: Threats, architecture, and intelligence",
	},
	
];
---

<PageLayout meta={{ title: "Annette-World" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
			Hi, I'm Annette, a software engineer sharing the technology I am exploring currently. 
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Links to my Work</h2>
		<dl class="space-y-4">
			{
				cactusTech.map(({ desc, href, title }) => (
					<div class="flex flex-col gap-2 sm:flex-row">
						<dt>
							<span class="flex">
								<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
									{title}
								</a>
								:
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	</section>
</PageLayout>
